const App: React.FC = () => {
  const [token, setToken] = useState<string | null>(null);
  const [showRegister, setShowRegister] = useState<boolean>(false);

  useEffect(() => {
    
  }, []);

  if (!token) {
    if (showRegister) {
      return <Register />;
    }
      return <LoginForm onLogin={setToken} onShowRegister={() => setShowRegister(true)} />;
  }
};

